<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:orientation="horizontal"
    app:columnCount="5"
    app:rowCount="3"
    tools:background="#B7B7B7">

    <TextView
        android:id="@+id/prediction_route_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C - Camino del Sol"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
        android:textColor="@color/white"
        app:layout_columnSpan="3"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        app:layout_row="0"
        app:layout_column="0" />

    <TextView
        android:id="@+id/prediction_arrival_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 min"
        android:paddingRight="@dimen/activity_horizontal_margin"
        app:layout_columnSpan="2"
        app:layout_gravity="bottom|right"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
        android:textColor="@color/white"
        app:layout_row="0"
        app:layout_column="3" />

    <TextView
        android:id="@+id/prediction_arrival_time_alt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_column="3"
        android:text="10 min"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/item_vertical_margin"
        app:layout_columnSpan="2"
        app:layout_gravity="center|right"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_row="1"
        android:maxHeight="84dp"/>

    <TextView
        android:id="@+id/prediction_stop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
        android:text="University Center - North (UCI Admin)"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/item_vertical_margin"
        app:layout_row="2"
        app:layout_column="2"
        app:layout_gravity="left" />

    <CheckBox
        android:id="@+id/prediction_favorite_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_column="4"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:button="@drawable/favorites_selector"
        app:layout_row="2"
        app:layout_gravity="right" />

</android.support.v7.widget.GridLayout>
